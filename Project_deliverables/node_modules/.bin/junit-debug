#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node" debug "$basedir/../junit/bin/junit-debug.js" "$@"
  ret=$?
else 
  node debug "$basedir/../junit/bin/junit-debug.js" "$@"
  ret=$?
fi
exit $ret
